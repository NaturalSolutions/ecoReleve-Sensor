{
  "name": "Vertebrate group",
  "description": "TProtocol_Vertebrate_Group",
  "keywords": [
    "Bird trapping",
    "Reptile trapping",
    "Mammal trapping"
  ],
  "schema": {
    "Name_Taxon": {
      "validators": [ "required"],
      "type": "Text",
      "title": "Taxon",
      "editorAttrs": { "startId": "8" },
      "editorClass": "autocompTree"
    },
    "Identity_sure": {
      "validators": [],
      "options" : ["true"],
      "type": "Checkbox",
      "title": "Sure"
    },
    "Nb_Adult_Male": {
      "validators": [],
      "type": "Number",
      "title": "Adult male",
      "editorClass": "indivNumber"
    },
    "Nb_Adult_Female": {
      "validators": [],
      "type": "Number",
      "title": "Adult female",
      "editorClass": "indivNumber"
    },
    "Nb_Adult_Indeterminate": {
      "validators": [],
      "type": "Number",
      "title": "Adult indeterminate",
      "editorClass": "indivNumber"
    },
    "Nb_Juvenile_Male": {
      "validators": [],
      "type": "Number",
      "title": "Juvenile male",
      "editorClass": "indivNumber"
    },
    "Nb_Juvenile_Female": {
      "validators": [],
      "type": "Number",
      "title": "Juvenile female",
      "editorClass": "indivNumber"
    },
    "Nb_Juvenile_Indeterminate": {
      "validators": [],
      "type": "Number",
      "title": "Juvenile indeterminate",
      "editorClass": "indivNumber"
    },
    "Nb_NewBorn_Male": {
      "validators": [],
      "type": "Number",
      "title": "New born male",
      "editorClass": "indivNumber"
    },
    "Nb_NewBorn_Female": {
      "validators": [],
      "type": "Number",
      "title": "New born female",
      "editorClass": "indivNumber"
    },
    "Nb_NewBorn_Indeterminate": {
      "validators": [],
      "type": "Number",
      "title": "New born indeterminate",
      "editorClass": "indivNumber"
    },
    "Nb_Indeterminate": {
      "validators": [],
      "type": "Number",
      "title": "Indeterminate",
      "editorClass": "indivNumber"
    },
    "Nb_Total": {
      "validators": [],
      "type": "Number",
      "title": "Total"
    },
    "Name_Behaviour": {
      "validators": [],
      "type": "Text",
      "title": "Behaviour",
      "editorAttrs": { "startId": "1032620" },
      "editorClass": "autocompTree"
    },
    "Disturbed": {
      "validators": [],
      "options" : ["true"],
      "type": "Checkbox",
      "title": "Disturbed"
    },
    "Comments": {
      "validators": [],
      "type": "TextArea",
      "title": "Comments",
	  "editorClass": "wideField"
    },
    "Measured_Distance": {
      "validators": [],
      "type": "Number",
      "title": "Measured distance(m)"
    },
    "Estimated_Distance": {
      "validators": [],
      "type": "Number",
      "title": "Estimated distance(m)"
    },
    "AngleNorth": {
      "validators": [
        {"type":"max", "value":360}
      ],
      "type": "Number",
      "title": "Angle from north(degree)",
      "editorAttrs": { "min": 0, "max" : 360 }
    },
    "AngleTrack": {
      "validators": [
        {"type":"max", "value":360}
      ],
      "type": "Number",
      "title": "Angle from track(degree)",
      "editorAttrs": { "min": 0, "max" : 360 }
    },
    "observation_time": {
      "validators": [],
      "type": "Text",
      "title": "Obs time",
	  "editorAttrs": { "placeholder":"HH:MM" },
      "editorClass": "required timePicker"
    }
  },
   "defaults":{
    "Identity_sure" : 1
  },
  "fieldsets": [
    {
      "fields": ["Name_Taxon", "Id_taxon","Identity_sure"],
      "legend": "Identification"
    },
	{
      "fields": ["Nb_Adult_Male","Nb_Adult_Female","Nb_Adult_Indeterminate"],
      "legend": "Individual adult"
    },
	{
      "fields": ["Nb_Juvenile_Male","Nb_Juvenile_Female","Nb_Juvenile_Indeterminate"],
      "legend": "Individual juvenile"
    },
	{
      "fields": ["Nb_NewBorn_Male","Nb_NewBorn_Female","Nb_NewBorn_Indeterminate"],
      "legend": "Individual new born"
    },
	{
      "fields": ["Nb_Indeterminate","Nb_Total"],
      "legend": "Individual"
    },
    {
      "fields": ["Measured_Distance", "Estimated_Distance","AngleNorth","AngleTrack","observation_time"],
      "legend": "Orientation"
    },
    {
      "fields": ["Comments","Disturbed","Name_Behaviour","Id_Behaviour"],
      "legend": "Other"
    }
  ]
}

